@model IEnumerable<Blog.Models.History>

@if (Model != null)
{
    foreach (var history in Model.OrderByDescending(o => o.CreatedOn))
    {
        <div class="col-xs-4">
            <div class="card">
                <div class="card-height-indicator"></div>
                <div class="card-content">
                    <div class="card-image">
                        <img src="@history.ImagesUrls.FirstOrDefault()" alt="Loading image...">
                        <h3 class="card-image-headline">
                            @history.Title
                        </h3>
                    </div>
                    <div class="card-body">
                        <p>Created by <b>@history.CreatedBy</b> in @history.CreatedOn</p>
                        <a class="btn btn-xs btn-warning btn-raised" href="@Url.Action("Details", "Home", new { id = history.Id })">View more &raquo;</a>
                    </div>
                </div>

            </div>
        </div>
    }
}